<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collappsingtoolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            app:contentScrim="?attr/colorPrimaryDark"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:title="Collapsing Toolbar"
            app:expandedTitleGravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/waveline"
                    android:tint="#FFFFFF"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"
                    android:alpha=".6"/>
            </RelativeLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarid"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:nestedScrollingEnabled="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="@dimen/cardview_default_radius"
                    app:cardElevation="@dimen/cardview_default_elevation"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_image3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="50dp"
                            android:layout_centerHorizontal="true"
                            app:cardElevation="0dp"
                            android:backgroundTint="@color/green">
                            <ImageView
                                android:id="@+id/image3"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_account"
                                android:tint="#FFFFFF"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/text3"
                            android:layout_below="@id/card_image3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Akun Kamu"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:padding="5dp"/>
                        <View
                            android:id="@+id/divider3"
                            android:layout_below="@id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"
                            android:alpha="0.2"/>
                        <TextView
                            android:id="@+id/subtext3"
                            android:layout_below="@id/divider3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lihat dan ubah profil kamu"
                            android:textColor="#50000000"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:padding="5dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="@dimen/cardview_default_radius"
                    app:cardElevation="@dimen/cardview_default_elevation"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_image4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="50dp"
                            android:layout_centerHorizontal="true"
                            app:cardElevation="0dp"
                            android:backgroundTint="@color/yellow"
                            android:layout_margin="5dp">
                            <ImageView
                                android:id="@+id/image4"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_daftar"
                                android:tint="#FFFFFF"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/text4"
                            android:layout_below="@id/card_image4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Daftar List"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:padding="5dp"/>
                        <View
                            android:id="@+id/divider4"
                            android:layout_below="@id/text4"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"
                            android:alpha="0.2"/>
                        <TextView
                            android:id="@+id/subtext4"
                            android:layout_below="@id/divider4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Semua daftar list belanjaan"
                            android:textColor="#50000000"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:padding="5dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="@dimen/cardview_default_radius"
                    app:cardElevation="@dimen/cardview_default_elevation"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_image1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="50dp"
                            android:layout_centerHorizontal="true"
                            app:cardElevation="0dp"
                            android:backgroundTint="@color/purple">
                            <ImageView
                                android:id="@+id/image1"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_keuangan"
                                android:tint="#FFFFFF"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/text1"
                            android:layout_below="@id/card_image1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Keuangan"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:padding="5dp"/>
                        <View
                            android:id="@+id/divider1"
                            android:layout_below="@id/text1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"
                            android:alpha="0.2"/>
                        <TextView
                            android:id="@+id/subtext1"
                            android:layout_below="@id/divider1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lihat pendapatan kamu disini"
                            android:textColor="#50000000"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:padding="5dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="@dimen/cardview_default_radius"
                    app:cardElevation="@dimen/cardview_default_elevation"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_image2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="50dp"
                            android:layout_centerHorizontal="true"
                            app:cardElevation="0dp"
                            android:backgroundTint="@color/colorPrimaryLight"
                            android:layout_margin="5dp">
                            <ImageView
                                android:id="@+id/image2"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_round_store_mall_directory_24"
                                android:tint="#FFFFFF"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/text2"
                            android:layout_below="@id/card_image2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kelola Toko"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:padding="5dp"/>
                        <View
                            android:id="@+id/divider2"
                            android:layout_below="@id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"
                            android:alpha="0.2"/>
                        <TextView
                            android:id="@+id/subtext2"
                            android:layout_below="@id/divider2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kelola toko kamu kepada pembeli"
                            android:textColor="#50000000"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:padding="5dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="@dimen/cardview_default_radius"
                    app:cardElevation="@dimen/cardview_default_elevation"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_image5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="50dp"
                            android:layout_centerHorizontal="true"
                            app:cardElevation="0dp"
                            android:backgroundTint="@color/pink">
                            <ImageView
                                android:id="@+id/image5"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_info"
                                android:tint="#FFFFFF"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/text5"
                            android:layout_below="@id/card_image5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Informasi"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:padding="5dp"/>
                        <View
                            android:id="@+id/divider5"
                            android:layout_below="@id/text5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"
                            android:alpha="0.2"/>
                        <TextView
                            android:id="@+id/subtext5"
                            android:layout_below="@id/divider5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Informasi tentang aplikasi ini"
                            android:textColor="#50000000"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:padding="5dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>